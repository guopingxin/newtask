/* 评价二维码 */
.qr-code-body {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr-code-content {
  width: 560rpx;
  height: 560rpx;
  background: #fff;
  border-radius: 20rpx;
  margin: 120rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.qr-code-content image{
  width: 480rpx;
  height: 480rpx;
}

.no-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.no-image image {
  width: 240rpx;
  height: 240rpx;
}