/* 底部操作模态框 */

.bottom-modal-body {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.bottom-content {
  width: 100%;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
}

.bottom-item {
  width: 100%;
  height: 72rpx;
  display: flex;
  align-items: center;
}

.icon {
  margin-right: 24rpx;
}