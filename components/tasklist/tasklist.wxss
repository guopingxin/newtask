.taskcontent{
  width: 96%;
  margin: 0 2%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.5);
  padding: 3% 0;
  font-size: 32rpx;
}

.case-text{
  width: 90%;
}

.taskcontent text{
  border-right: 1rpx solid #e8e8e8;
  padding-right: 14rpx;
  margin-right: 10rpx;
}

.taskfont text:last-child{
  border-right:none !important;
}

.casestate{
  width: 120rpx;
  border-radius: 50rpx;
  padding: 6rpx 0;
  color: white;
  background: #1a65ff;
  text-align: center;
  font-size: 22rpx;
}

.taskfont{
  font-size: 26rpx;
  color: rgba(78, 78, 78, 0.5);
  margin: 4rpx 0;
}

.color{
  color: rgba(140, 140, 140, 0.5)
}

.surveymode{
  display: flex;
  width: 94%;
  margin: 3% 3%;
  justify-content: space-around;
  font-size: 24rpx;
}

.surveymode_item{
  /* padding: 6rpx 44rpx; */
  background: white;
  border-radius: 50rpx;
  border: 1rpx solid rgba(216, 216, 216, 0.5);
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 45rpx;
}

.report{
  word-break:break-all;
  word-wrap:break-word;
}
