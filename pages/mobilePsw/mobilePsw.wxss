/* pages/mobilePsw/mobilePsw.wxss */
.title{
  width: 100%;
  margin: 30rpx 0;
  font-size: 38rpx;
  font-family: PingFangSC-Semibold, sans-serif;
  text-align: center;
  letter-spacing: 2rpx;
}

.formmode{
  width: 90%;
  margin:90rpx 5% 0 5%;
}

.item{
  width: 100%;
  height: 90rpx;
  border-radius: 50rpx;
  box-shadow: 0 0 4rpx 2rpx rgba(216, 216, 216, 0.50);
  display: flex;
  align-items: center;
  margin: 50rpx 0;
}

.item input{
  width: 50%;
  margin-left: 60rpx;
  font-size: 30rpx;
}

.telimg{
  width: 100rpx;
  height: 60rpx;
  border-right: 2rpx solid rgba(216, 216, 216, 0.50);
  display: flex;
  justify-content: center;
  align-items: center;
}

.telimg image{
  width: 50rpx;
  height: 50rpx;
}

.placeholder{
  font-size: 30rpx;
  color: rgba(102, 102, 102, 0.5);
}

button{
  width: 90%;
  height: 80rpx;
  background: #3891F8;
  color: white;
  border-radius: 50rpx;
  letter-spacing: 2rpx;
  box-shadow: 0 0 4rpx 2rpx #3891F8;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 140rpx;
}

.item text{
  color: #3891F8;
  font-size: 26rpx;
  text-align: center;
  width: 160rpx;
}