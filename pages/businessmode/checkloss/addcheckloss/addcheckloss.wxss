.add-survey-body {
   
}

.analysis {
  width: 100%;
  padding: 0 24rpx;
}

.analysis-title {
  padding: 24rpx 0;
}

.analysis-content {
  width: 93%;
  height: 306rpx;
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.20);
  border-radius: 20rpx;
  padding: 24rpx;
}

.analysis-msg {
  width: 702rpx;
  padding: 24rpx 0;
  text-align: right;
  color: #1A65FF;
}

.spacing{
  margin-bottom: 100rpx;
}

.analysis-btn {
  width: 702rpx;
  height: 80rpx;
  background: #1A65FF;
  border-radius: 40rpx;
  color: #fff;
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
}

.add-survey-form {
 
}

.survey {
  width: 100%;
}

.survey-item {
  width: 702rpx;
  height: 90rpx;
  margin: 0 24rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.20);
}

.survey-item label {
  width: 215rpx;
}

.survey-item-picker {
  width: 480rpx;
  height: 42rpx;
}

.survey-item-input {
  width: 420rpx;
  overflow: hidden;
}

.survey-item-textarea {
  width: 702rpx;
  height: 284rpx;
  margin: 0 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.survey-item-textarea label {
  height: 90rpx;
  line-height: 90rpx;
}

.survey-item-textarea textarea {
  width: 93%;
  height: 194rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.20);
  border-radius: 20rpx;
  padding: 24rpx;
  overflow: hidden;
}

.survey-item-radio radio:first-child {
  margin-right: 48rpx;
}

.survey-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  background: #1a65ff;
  border-radius: 0;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9;
}

.survey-item-address {
position: relative;
}

.survey-item-address-img {
width: 40rpx;
height: 40rpx;
position: absolute;
right: 24rpx;
top: 25rpx;
}

.survey-item-address-img image {
width: 40rpx;
height: 40rpx;
}