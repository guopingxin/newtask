/* 添加明细 */

.add-detailed-body {
  padding-bottom: 104rpx;
}

.add-item {
  width: 100%;
}

.add-item-title {
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add-item-title-right {
  display: flex;
  align-items: center;
}

.add-item-content {
  width: 702rpx;
  margin: 0 auto;
  background: #f5f9fc;
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 45rpx;
}

.add-pic {
  width: 140rpx;
  height: 140rpx;
  border: 1px solid #ebebeb;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 16rpx 32rpx;
}

.add-pic image {
  width: 80rpx;
  height: 80rpx;
}

.pic-box {
  width: 140rpx;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin: 16rpx 32rpx;
}

.pic-box image {
  width: 140rpx;
  height: 140rpx;
}

.icon {
  position: absolute;
  top: -24rpx;
  right: -24rpx;
}

.add-btn {
  width: 100%;
  height: 80rpx;
  box-shadow: 0 -2rpx 0 0 rgba(0, 0, 0, 0.10);
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
