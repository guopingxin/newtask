/* pages/businessmode/diseasesurvey/diseaseupload/diseaseupload.wxss */
.container{
  width: 94%;
  margin: 0 3%;
}

.title{
  font-size: 36rpx;
  font-family: PingFangSC-Medium, sans-serif;
  letter-spacing: 1rpx;
  margin: 3% 0;
}

.context{
  border-radius: 20rpx;
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  width: 100%;
  padding: 20rpx;
  margin: 3% 0;
}

textarea{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
}

.textstyle{
  font-size: 26rpx;
  color: rgb(170, 170, 170);
}

.textstyle view{
  line-height: 40rpx;
  letter-spacing: 1rpx;
}

.imagecell{
  display: flex;
  flex-wrap:wrap;
  margin-bottom: 150rpx;
}

.imageitem{
  position: relative;
  width: 33.3%;
}

.pic{
  width: 200rpx;
  height: 200rpx;
}

.del{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -16rpx;
  right: 2rpx;
  z-index: 1;
}

.camera{
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
  margin: 3% 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.camera image{
  width: 70rpx;
  height: 60rpx;
}

.canvas{
  width: 100%;
  height: 0;
}

button{
  width: 94%;
  border-radius: 50rpx;
  background: #1a65ff;
  color: white;
  height: 80rpx;
  position: fixed;
  bottom: 14rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 1rpx;
  padding: 0;
}