/* pages/businessmode/pushrepair/addpushcar/addpushcar.wxss */
.container{
  width: 100%;
  height: 100%;
  
}

.addpushitem{
  display: flex;
  height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #e8e8e8;
  width: 92%;
  justify-content: space-between;
  margin: 0 4%;
}

.addpushitem input{
  width: 72%;
}

.beizhu{
  display: flex;
  flex-direction: column;
  margin: 28rpx 4%;
  width: 92%;
}

textarea{
  width: 96%;
  height: 280rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  margin: 28rpx 0;
  padding: 2%;
}

.btn-add{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background: #1a65ff;
  color: white;
  border-radius: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}