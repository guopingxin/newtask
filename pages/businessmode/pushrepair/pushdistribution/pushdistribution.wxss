/* pages/businessmode/pushrepair/pushdistribution/pushdistribution.wxss */

.topbg {
  width: 100%;
  height: 70rpx;
  background: #1a65ff;
  position: absolute;
  top: 0;
  z-index: -1;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}

.search-box {
  width: 94%;
  height: 80rpx;
  margin: 2% 3%;
  border-radius: 20rpx;
  box-shadow: 0 0 4rpx 2rpx rgba(241, 241, 241, 0.50);
  border: 1rpx solid rgb(241, 241, 241);
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  background: white;
  justify-content: space-between;
  padding: 0 30rpx;
}

.search-box image:first-child{
  width: 40rpx;
  height: 40rpx;
}

.distributionitem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 92%;
  margin: 0 4%;
  height: 90rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

/* radio未选中时样式 */
radio .wx-radio-input{
  border-radius: 50%;
  height: 26rpx;
  width: 26rpx;
  background: transparent;
  border: 2rpx solid #999;
} 

/* radio选中时样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
  background: #1a65ff;
  border: none;
  border-radius: 50%;
}

.btn{
  padding: 0px;
  text-align: center;
  /* border-radius:5px; */
  height: 80rpx;
  line-height: 80rpx;
  background:#1a65ff;
  color:#fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  margin: 0rpx;
  border-radius: 0;
}
