/* pages/businessmode/pushrepair/pushrepair.wxss */
.container{
  width: 92%;
  margin: 0 4%;
}

.title{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}

.dotmode{
  display: flex;
}

.dot{
  width: 8rpx;
  height: 8rpx;
  background: #1a65ff;
  margin-right: 4rpx;
  border-radius: 50%;
}

.base-infor{
  width: 100%;
  border-radius: 20rpx;
  box-shadow: 0 0 3rpx 3rpx rgba(216, 216, 216, 0.5);
}

.item-text{
  display: flex;
  justify-content: space-between;
  width: 92%;
  margin: 0 4%;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.5);
  align-items: center;
  height: 90rpx;
}

.fankuiresult{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 56rpx;
  font-size: 26rpx;
}

.fankuiresult view{
  width: 22%;
  display: flex;
  justify-content: center;
  height: 56rpx;
  align-items: center;
  border-radius: 50rpx;
}

.push-progress{
  margin-bottom: 200rpx;
}

.jiedan{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e8e8e8;
}

.linewhole{
  display: flex;
  flex-direction: column;
  height: 18rpx;
  justify-content: space-between;
  margin-right: 10rpx;
}

.line{
  width: 16rpx;
  height: 3rpx;
  background: #848484;
}

.inprogress-whole{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #e8e8e8;
}

.progress-bottom{
  display: flex;
  height: 70rpx;
  width: 50%;
  justify-content: center;
  align-items: center;
}

.border{
  border-right: 1rpx solid rgba(74, 74, 74, 0.5);
}