.chart_date{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  display: flex;
  z-index: 1000;
}

.chart_date cover-view{
  width: 130rpx;
  padding: 8rpx 0;
  border: 1rpx solid rgba(216, 216, 216, 0.5);
  text-align: center;
  margin-right: 20rpx;
  color: #1a65ff;
  border-radius: 50rpx;
  font-size: 28rpx;
  background: white;
}

.tasktotal{
  width: 94%;
  margin: 3% 3%;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  position: relative;
  top: 480rpx;
}

.tasktotal text:last-child{
  color: #a7a7a7;
}

.taskwholemode{
  width: 94%;
  margin: 0 3%;
  border-radius: 20rpx;
  border: 1rpx solid rgba(216, 216, 216, 0.5);
  box-shadow: 0 0 2rpx 2rpx rgba(216, 216, 216, 0.5);
  position: relative;
  top: 480rpx;
}