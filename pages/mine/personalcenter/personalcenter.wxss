/* pages/mine/personalcenter/personalcenter.wxss */

.container{
  width: 100%;
  font-size: 32rpx;
}

.useritem{
  width: 94%;
  margin: 0 3%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgb(241, 241, 241);
  position: relative;
}

.arrows_right{
  width: 42rpx;
  height: 32rpx;
  position: absolute;
  top: 35rpx;
  right: 0rpx;
}

.margin{
  margin-top: 14rpx;
}

.head-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 44rpx;
}

.useritem input{
  background: white;
  text-align: right;
  color: #88898b;
}

.nickname{
  margin-right: 44rpx;
}

.sure{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #366ff3;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
}
