/* 提现 */

view {
  box-sizing: border-box;
}

/* 我的余额 */

.container-cash .balance {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.container-cash .cash-deailed {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 24rpx;
  color: #6b6b6b;
}

.container-cash .balance-img {
  margin: 90rpx 0;
}

.container-cash .balance-img image {
  width: 174rpx;
  height: 166rpx;
}

.container-cash .balance-text {
  display: flex;
  align-items: center;
}

.container-cash .balance-text>view {
  width: 70rpx;
  height: 2rpx;
  background: #d6d6d6;
}

.container-cash .balance-text text {
  font-size: 30rpx;
  margin: 0 20rpx;
}

.container-cash .balance-num text {
  font-family: PingFangSC-Medium;
  font-size: 70rpx;
}

/* 提现卡片 */

.container-cash .cash-card {
  width: 702rpx;
  height: 496rpx;
  margin: 26rpx auto;
  padding: 24rpx;
  box-shadow: 0 0 4rpx 4rpx rgba(206, 206, 206, 0.50);
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container-cash .cash-title {
  font-size: 30rpx;
  color: #959595;
}

.container-cash .cash-content {
  width: 598rpx;
}

.container-cash .input-box {
  height: 114rpx;
  display: flex;
  align-items: center;
  /* align-items: flex-end; */
  border-bottom: 3rpx solid #d8d8d8;
  padding-top: 10rpx;
  font-size: 30rpx;
  position: relative;
}

.container-cash .input-box text:first-child {
  display: inline-block;
  /* margin-bottom: 24rpx; */
}

.container-cash .input-box input {
  /* padding-bottom: 24rpx; */
  padding: 10rpx 0
}

.container-cash .input-box .all-btn {
  position: absolute;
  right: 0;
  bottom: 24rpx;
  color: #1a84ff;
}

.container-cash .input-holder {
  color: #959595;
  font-size: 30rpx;
}

.container-cash .bar {
  width: 300rpx;
  font-size: 50rpx;
}

.container-cash .tip {
  font-size: 24rpx;
  color: #afafaf;
  margin-top: 12rpx;
}

.container-cash .cash-btn {
  width: 598rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #cacaca;
  border-radius: 40rpx;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #fff;
  margin: 24rpx 0 0;
  border: 0;
}

.container-cash .cash-btn_tri {
  width: 598rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #1a84ff;
  border-radius: 40rpx;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #fff;
  margin: 24rpx 0 0;
  border: 0;
}

/* 提现成功 */
.container-success {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container-success .title {
  margin-top: 290rpx;
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}
.container-success .title-text {
  font-family: PingFangSC-Medium;
  font-size: 50rpx;
  color: #1A84FF;
}
.container-success .img {
  margin: 109rpx 0 38rpx;
}
.container-success .img image {
  width: 346rpx;
  height: 317rpx;
}
.container-success .message {
  color: #1A84FF;
  font-size: 30rpx;
}
.container-success .btn-bar {
  display: flex;
  align-items: center;
  margin-top: 146rpx;
}
.container-success .btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 47rpx;
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #ffffff;
  margin: 0 30rpx;
}
.container-success .back-btn {
  background: #CBCBCB;
}
.container-success .continue-btn {
  background: #1A84FF;
}
