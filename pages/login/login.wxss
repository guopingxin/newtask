/* pages/login/login.wxss */
page{
  width: 100%;
  height: 100%;
  background: url('https://6661-fanqizhalianmeng-8ygjc-1300247030.tcb.qcloud.la/task/bg.png?sign=b166b84103aa0ccfeec6fa61294a29bc&t=1570679843') no-repeat left top;
  background-size: 100% 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container{
  width: 82%;
  height: 800rpx;
  background: url('https://6e65-new-task-rotxv-1259392173.tcb.qcloud.la/login/loginmode.png?sign=30f895f9477e5ea6c77637e88e82d9c1&t=1571712389') no-repeat left top;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo{
  width: 130rpx;
  height: 130rpx;
  margin-top: 50rpx;
}

text{
  font-family: PingFangSC-Semibold, sans-serif;
  font-size: 36rpx;
  margin: 20rpx 0 50rpx 0;
  letter-spacing: 1rpx;
}

form{
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-mode{
  border: 1rpx solid #e8e8e8;
  border-radius: 50rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  margin-bottom: 28rpx;
}

.user-mode image{
  width: 50rpx;
  height: 50rpx;
}

input{
  width: 77%;
}

.forget{
  color: #1a65ff;
  width: 100%;
  text-align: right;
  font-size: 28rpx;
}

button{
  border-radius:50rpx;
  background: #1a65ff;
  color: white;
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center; 
  margin-top: 40rpx;
}